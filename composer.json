{
  "name": "flavioheleno/watchr",
  "description": "Command-line utility to check for Domain Name and TLS Certificates expiration dates.",
  "keywords": ["domain", "whois", "rdap", "dns", "tls", "certificate"],
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Flavio Heleno",
      "email": "flaviohbatista@gmail.com",
      "homepage": "https://flavioheleno.com"
    }
  ],
  "homepage": "https://github.com/flavioheleno/watchr/",
  "autoload": {
    "psr-4": {
      "Watchr\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Watchr\\Test\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {}
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "ext-curl": "*",
    "ext-filter": "*",
    "ext-openssl": "*",
    "acmephp/ssl": "^2.1",
    "guzzlehttp/guzzle": "^7.8",
    "io-developer/php-whois": "^4.1",
    "juanparati/rdap-lib": "^2.0",
    "league/config": "^1.2",
    "mlocati/ocsp": "^1.1",
    "php-di/php-di": "^7.0",
    "psr/cache": "^3.0",
    "psr/clock": "^1.0",
    "psr/container": "^2.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^2.0",
    "symfony/clock": "^6.3",
    "symfony/console": "^6.3"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.2",
    "psy/psysh": "^0.11.18",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
